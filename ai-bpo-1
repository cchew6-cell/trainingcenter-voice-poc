    <script>
        // --- Helper Function: Split Long Labels (16 char limit) ---
        function splitLabel(label) {
            if (typeof label !== 'string') return label;
            if (label.length <= 16) return label;
            
            const words = label.split(' ');
            const lines = [];
            let currentLine = words[0];

            for (let i = 1; i < words.length; i++) {
                if ((currentLine + " " + words[i]).length > 16) {
                    lines.push(currentLine);
                    currentLine = words[i];
                } else {
                    currentLine += " " + words[i];
                }
            }
            lines.push(currentLine);
            return lines;
        }

        // --- Shared Tooltip Config ---
        const commonTooltip = {
            callbacks: {
                title: function(tooltipItems) {
                    const item = tooltipItems[0];
                    let label = item.chart.data.labels[item.dataIndex];
                    if (Array.isArray(label)) {
                        return label.join(' ');
                    } else {
                        return label;
                    }
                }
            }
        };

        // --- Chart 1: Market Share (Donut) ---
        const ctxMarket = document.getElementById('marketShareChart').getContext('2d');
        const marketLabels = ["SMEs without CRM/BPO", "SMEs with Managed Services", "Large Enterprises"];
        new Chart(ctxMarket, {
            type: 'doughnut',
            data: {
                labels: marketLabels.map(splitLabel),
                datasets: [{
                    data: [85, 12, 3],
                    backgroundColor: ['#3B82F6', '#10B981', '#6B7280'], // Blue (Opportunity), Green, Grey
                    borderWidth: 0,
                    hoverOffset: 4
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { position: 'bottom' },
                    tooltip: commonTooltip,
                    title: { display: true, text: 'Target Market Distribution' }
                }
            }
        });

        // --- Chart 2: Radar Comparison (Radar) ---
        const ctxRadar = document.getElementById('radarComparisonChart').getContext('2d');
        const radarLabels = ["Cost Efficiency", "Scalability (Speed)", "Availability (24/7)", "Empathy/Nuance", "Setup Complexity"];
        new Chart(ctxRadar, {
            type: 'radar',
            data: {
                labels: radarLabels.map(splitLabel),
                datasets: [{
                    label: 'Proposed AI Model',
                    data: [95, 100, 100, 40, 90],
                    fill: true,
                    backgroundColor: 'rgba(139, 92, 246, 0.2)', // Purple
                    borderColor: 'rgb(139, 92, 246)',
                    pointBackgroundColor: 'rgb(139, 92, 246)',
                }, {
                    label: 'Conventional BPO (Asia Fibre)',
                    data: [30, 40, 50, 95, 30],
                    fill: true,
                    backgroundColor: 'rgba(107, 114, 128, 0.2)', // Grey
                    borderColor: 'rgb(107, 114, 128)',
                    pointBackgroundColor: 'rgb(107, 114, 128)',
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { position: 'bottom' },
                    tooltip: commonTooltip
                },
                scales: {
                    r: {
                        angleLines: { display: true },
                        suggestedMin: 0,
                        suggestedMax: 100
                    }
                }
            }
        });

        // --- Chart 3: Financial Break-Even (Bar/Line Combo) ---
        // Showing Revenue flat at RM100 vs Costs rising with minutes
        const ctxFinance = document.getElementById('financialChart').getContext('2d');
        const minutes = [0, 50, 100, 150, 200, 300];
        const revenue = [100, 100, 100, 100, 100, 100]; // Flat subscription
        // Assuming approx RM 0.80 per minute total cost (Retell + Twilio + LLM)
        const costs = minutes.map(m => m * 0.80); 

        new Chart(ctxFinance, {
            type: 'bar',
            data: {
                labels: minutes.map(m => m + " Mins Used"),
                datasets: [{
                    type: 'line',
                    label: 'Revenue (Subscription)',
                    data: revenue,
                    borderColor: '#10B981', // Green
                    borderWidth: 3,
                    fill: false,
                    tension: 0.1
                }, {
                    type: 'bar',
                    label: 'Variable AI Costs (RM)',
                    data: costs,
                    backgroundColor: '#EF4444', // Red
                    borderRadius: 4
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { position: 'bottom' },
                    tooltip: commonTooltip,
                    title: { display: true, text: 'The Danger Zone: Costs vs Revenue' }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        title: { display: true, text: 'Value (MYR)' }
                    }
                }
            }
        });

    </script>
